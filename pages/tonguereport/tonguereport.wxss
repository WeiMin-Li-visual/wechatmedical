page {
  height: calc(100%);
  background-color: #84d8ec;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100%;
}

.head {
  width: 90%;
}

.image_container {
  width: 180rpx;
  height: 180rpx;
  padding: 5%;
}

.text_report {
  font-size: 50rpx;
}

.text {
  font-size: 30rpx;
  color: #ffffff;
}

.time {
  font-size: 30rpx;
  color: #ff0000;
}

.body {
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
  width: 95%;
  /* height: auto; */
  background-color: #ffffff;
}

.nav {
  justify-content: space-between;
  display: flex;
  width: 80%;
  height: 60rpx;
  margin: auto;
  flex-direction: row;
}

.nav-item {
  width: 50%;
  font-size: 45rpx;
  text-align: center;
  margin-bottom: -20rpx;
}

.nav-item.active {
  color: red;
  font-size: 50rpx;
  border-bottom: 2px solid red;
  width: 200rpx;
}

.tab-box {
  background-color: #ffffff;
  margin: 10px;
  margin-top: 50rpx;
  margin-bottom: 50px;
  height: 750rpx;
}

.tab-content {
  overflow-y: scroll;
}

.report_container {
  display: flex;
  flex-direction: column;
}

.tongue_color {
  display: flex;
  flex-direction: column;
  
  /* border-bottom: 1px solid red; */
}

.tongue_shape {
  display: flex;
  flex-direction: column;
  
}

.tongue_moss_color {
  display: flex;
  flex-direction: column;
}

.tongue_moss_nature {
  display: flex;
  flex-direction: column;
}

.title {
  color: #84d8ec;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
  font-size: 40rpx;
}

.content_symptom {
  font-size: 35rpx;
  text-align: center;
  font-weight: bolder;
  margin-bottom: 20rpx;
}

.content_detail {
  font-size: 28rpx;
  clear: both;
  margin-top: 20rpx;
  text-indent: 55rpx;
  text-align: justify;
}

.suggest {
  font-size: 28rpx;
  clear: both;
  margin-top: 20rpx;
  text-indent: 55rpx;
  text-align: justify;
}