page {
  height: calc(100%);
  background-color: #edece8;
}

.notice_image{
  width: 100%;
  height: 400rpx;
}

.notice_text{
  color: #ff0000;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.camera_container {
  height: 85vh;
  width: 100%;
  /* 超出区域就截取 */
  overflow: hidden;
  background-color: #109cff;
  position: relative;
}

.camera_wrp {
  width: 100%;
  height: 85vh;
  position: absolute;
}

camera {
  flex: 1;
  width: 100%;
  height: 85vh;
  position: absolute;
}

.cover_view{
  height: 100%;
  width: 100%;
  position: relative;
  display: flex;
  justify-content: center;
}

.upload_image{
  flex: 2;
  position: absolute;
  width: 30%;
  height: 20%;
  left: 50%;
  transform: translate(-50%, -50%);
  top: 50%;
}

.upload_text{
  flex: 3;
  position: absolute;
  width: 20%;
  height: 30%;
  left: 50%;
  transform: translate(-50%, -50%);
  top: 75%;
  color:#fff;
}

.outline {
  flex: 1;
  width: 100%;
  height: 85vh;
  position: absolute;
}

.cover_text{
  margin-top: 100rpx;
  color: #ffff;
  font-size: 50rpx;
}

.camera_auth{
  width: 100%;
  height: 85vh;
  position: absolute;
}

.auth_bg{
  height: 100%;
  width: 100%;
}

.auth_btn {
  position: absolute;
  left: 50%;
  transform: translate(-50%, -50%);
  top: 50%;
  color: greenyellow;
  font-size: 40rpx;
}

.menu_container {
  position: relative;
  flex: 1;
}

.menu_content {
  background-color: #fff;
  display: flex;
  height: 100%;
  align-items: center;
}

.menu_view {
  flex: 1;
  text-align: center;
}

.album_icon {
  font-size: 70rpx;
  color: #109cff;
}

.photo_icon {
  font-size: 130rpx;
  color: #109cff;
}

.xuanzhuan_icon {
  font-size: 75rpx;
  color: #109cff;
}